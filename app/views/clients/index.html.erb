<div class="uk-grid">
  <div class="uk-width-8-10 uk-push-1-10">
    <p id="notice"><%= notice %></p>

    <h1 class="uk-text-danger">Clients</h1>

    <table class="uk-table uk-table-striped">
      <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Phone</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @clients.each do |client| %>
          <tr>
            <td><%= client.first_name %></td>
            <td><%= client.last_name %></td>
            <td><%= client.phone %></td>
            <td><%= client.email %></td>
            <td><%= link_to 'Show', client %></td>
            <td><%= link_to 'Edit', edit_client_path(client) %></td>
            <td><%= link_to 'Destroy', client, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <div class="uk-button-group">
      <%= link_to 'New Client', new_client_path, class: 'uk-button uk-button-small uk-button-primary' %>
      <%= link_to 'Home Page', :root, class: 'uk-button uk-button-small'%>
    </div>
  </div>
</div>
