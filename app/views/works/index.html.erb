<div class="uk-grid">
  <div class="uk-width-8-10 uk-push-1-10">
    <p id="notice"><%= notice %></p>

    <h1>Works</h1>

    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Progress</th>
        <th>Payment</th>
        <th>Project</th>
        <th>Developer</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @works.each do |work| %>
          <tr>
            <td><%= work.name %></td>
            <td><%= work.description %></td>
            <td><%= work.progress %></td>
            <td><%= work.payment %></td>
            <td><%= work.project.name %></td>
            <td><%= work.developer.full_name %></td>
            <td><%= t("work_statuses.#{work.status}") %></td>
            <td><%= link_to 'Show', work %></td>
            <% if can? :update, work %>
                <td><%= link_to 'Edit', edit_work_path(work) %></td>
            <% end %>
            <% if can? :destroy, work %>
                <td><%= link_to 'Destroy', work, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <% end %>

          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <div class="uk-button-group">
      <%= link_to 'New Work', new_work_path, class: 'uk-button uk-button-small uk-button-primary' %>
      <%= link_to 'Home Page', :root, class: 'uk-button uk-button-small' %>
    </div>
  </div>
</div>
