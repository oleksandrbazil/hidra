<div class="uk-grid uk-text-center">
  <div class="uk-width-10-10">
    <h1 class="uk-text-primary">Welcome to Hidra</h1>
  </div>
</div>
<div class="uk-grid">
  <div class="uk-width-2-6 uk-push-2-6">
    <ul class="uk-list uk-list-striped">
      <li><%= link_to 'Clients', clients_path %></li>
      <li><%= link_to 'Projects', projects_path %></li>
      <li><%= link_to 'Developers', developers_path %></li>
      <li><%= link_to 'Works', works_path %></li>
      <li><%= link_to 'Comments', comments_path %></li>
    </ul>
  </div>
</div>
<div class="uk-grid uk-text-center">
  <div class="uk-width-2-6 uk-push-2-6">
      <% if user_signed_in? %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'uk-button uk-button-small uk-button-success' %>
      <% else %>
        <div class="uk-button-group">
          <%= link_to 'Login', new_user_session_path, class: 'uk-button uk-button-mini uk-button-success' %>
          <%= link_to 'Register', new_user_registration_path, class: 'uk-button uk-button-mini uk-button-danger' %>
        </div>
      <% end %>
  </div>
</div>