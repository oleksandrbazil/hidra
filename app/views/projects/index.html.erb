<div class="uk-grid">
  <div class="uk-width-8-10 uk-push-1-10">
    <p id="notice"><%= notice %></p>

    <h1 class="uk-text-primary">Projects</h1>

    <table class="uk-table uk-table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th>Kind</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td><%= project.url %></td>
            <td><%= project.kind %></td>
            <td><%= link_to 'Show', project %></td>
            <td><%= link_to 'Edit', edit_project_path(project) %></td>
            <td><%= link_to 'Destroy', project, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <div class="uk-button-group">
      <%= link_to 'New Project', new_project_path, class: 'uk-button uk-button-small uk-button-primary' %>
      <%= link_to 'Home Page', :root, class: 'uk-button uk-button-small'%>
    </div>
  </div>
</div>