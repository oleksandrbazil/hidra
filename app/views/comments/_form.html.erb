<article class="uk-comment">
  <header class="uk-comment-header">
    <%= form_for [commentable, Comment.new], html: {class: 'uk-form'} do |f| %>
        <div class="uk-form-row">
          <%= f.text_field :title, placeholder: 'Title', class: 'uk-input uk-width-1-1' %>
        </div>

        <div class="uk-form-row">
          <%= f.text_area :body, placeholder: 'comment message', class: 'uk-width-1-1' %>
        </div>

        <div class="actions uk-form-row">
          <%= f.submit 'Comment', class: 'uk-button uk-button-small uk-button-primary uk-width-1-3 uk-push-1-3' %>
        </div>
    <% end %>
  </header>
</article>
