<div class="uk-grid">
  <div class="uk-width-8-10 uk-push-1-10">
    <p id="notice"><%= notice %></p>

    <h1>Comments</h1>

    <table class="uk-table uk-table-striped comment-table">
      <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <td>in Model</td>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.title %></td>
            <td><%= comment.body %></td>
            <td><%= comment.commentable_type %></td>
            <td><%= link_to 'Show', comment %></td>
            <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
            <td><%= link_to 'Destroy', comment, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'Home Page', :root, class: 'uk-button uk-button-small'%>
  </div>
</div>