<div class="uk-grid">
  <div class="uk-width-4-6 uk-push-1-6">
    <p id="notice"><%= notice %></p>
    <article class="uk-comment">
      <header class="uk-comment-header">
        <img class="uk-comment-avatar" src="" alt="">

        <h4 class="uk-comment-title"><%= @comment.title %></h4>

        <div class="uk-comment-meta"><%= @comment.created_at.strftime("%D %H:%M:%S") %></div>
        <div class="uk-comment-body"><%= @comment.body %></div>
      </header>
    </article>
  </div>
</div>

<div class="uk-grid">
  <div class="uk-width-8-10 uk-push-1-10">
    <%= link_to 'Back', comments_path, class: 'uk-button uk-button-small' %>
  </div>
</div>
