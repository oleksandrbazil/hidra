<div class="uk-grid">
  <div class="uk-width-8-10 uk-push-1-10">
    <p id="notice"><%= notice %></p>

    <h1 class="uk-text-success">Developers</h1>

    <table class="uk-table uk-table-striped">
      <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Phone</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @developers.each do |developer| %>
          <tr>
            <td><%= developer.first_name %></td>
            <td><%= developer.last_name %></td>
            <td><%= developer.phone %></td>
            <td><%= developer.email %></td>
            <td><%= link_to 'Show', developer %></td>
            <td><%= link_to 'Edit', edit_developer_path(developer) %></td>
            <td><%= link_to 'Destroy', developer, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>
    <div class="uk-button-group">
      <%= link_to 'New Developer', new_developer_path, class: 'uk-button uk-button-small uk-button-primary'%>
      <%= link_to 'Home Page', :root, class: 'uk-button uk-button-small'%>
    </div>
  </div>
</div>