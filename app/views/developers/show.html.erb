<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @developer.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @developer.last_name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @developer.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @developer.email %>
</p>

<h4>Related Projects</h4>
<% @developer.projects.each do |project| %>
    <li><%= link_to project.name, project_path(project) %></li>
<% end %>

<h4>Comments</h4>
<%= render partial: 'comments/list', locals: {commentable: @developer} %>
<%= render partial: 'comments/form', locals: {commentable: @developer} %>

<%= link_to 'Edit', edit_developer_path(@developer) %> |
<%= link_to 'Back', developers_path %>
